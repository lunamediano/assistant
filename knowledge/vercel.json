{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "functions": {
    "api/**/*.{js,ts}": {
      "runtime": "nodejs20.x",
      "includeFiles": [
        "knowledge/**",
        "data/**"
      ]
    }
  }
}
