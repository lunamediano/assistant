{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "includeFiles": ["core/**", "data/**", "knowledge/**"]
    },
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "includeFiles": ["core/**", "data/**", "knowledge/**"]
    }
  }
}
